<!-- app/views/books/index.html.erb -->

<h1>Books List</h1>

<%= link_to 'Add New Book', new_book_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published Year</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_year %></td>
        <td>
          <%= link_to 'Edit', edit_book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
